<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/servus_pink</item>
        <item name="colorPrimaryVariant">@color/servus_pink_variant</item>
        <item name="colorOnPrimary">@color/servus_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/servus_violet</item>
        <item name="colorSecondaryVariant">@color/servus_blue</item>
        <item name="colorOnSecondary">@color/servus_white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/servus_darkmode_grey</item>
        <item name="android:colorControlHighlight">@color/servus_pink</item>
        <item name="android:colorControlActivated">@color/servus_pink</item>
        <item name="android:colorControlNormal">@color/servus_blue</item>
        <item name="android:colorAccent">@color/servus_pink</item>

        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/servus_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="mButtons" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/style_btn_roundedcorners</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/servus_white</item>
    </style>

    <style name="mEditTexts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/servus_white</item>
        <item name="android:gravity">top|left</item>
    </style>
</resources>