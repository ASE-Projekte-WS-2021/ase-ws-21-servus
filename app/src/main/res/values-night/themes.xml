<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/servus_pink</item>
        <item name="colorPrimaryVariant">@color/servus_pink_variant</item>
        <item name="colorOnPrimary">@color/servus_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/servus_violet</item>
        <item name="colorSecondaryVariant">@color/servus_blue</item>
        <item name="colorOnSecondary">@color/servus_white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:colorForeground">@color/servus_white</item>
        <item name="android:colorBackground">@color/servus_darkmode_grey</item>

        <item name="colorControlHighlight">@color/servus_pink</item>
        <item name="android:colorControlHighlight">@color/servus_pink</item>
        <item name="colorControlActivated">@color/servus_pink</item>
        <item name="android:colorControlActivated">@color/servus_pink</item>
        <item name="colorControlNormal">@color/servus_pink</item>
        <item name="android:colorControlNormal">@color/servus_pink</item>
        <item name="colorAccent">@color/servus_pink</item>
        <item name="android:colorAccent">@color/servus_pink</item>

        <item name="colorButtonNormal">@color/servus_darkmode_grey</item>

        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/servus_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>

        <!-- UI element style. -->
        <item name="buttonStyle">@style/mButtons</item>
        <item name="android:buttonStyle">@style/mButtons</item>
        <item name="editTextStyle">@style/mEditTexts</item>
        <item name="android:editTextStyle">@style/mEditTexts</item>
        <item name="android:datePickerStyle">@style/mDatePickerStyle</item>
    </style>

    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mButtons" parent="Theme.MyApplication">
        <item name="android:theme">@style/Theme.MyApplication</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/style_btn_roundedcorners</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/servus_white</item>
    </style>

    <style name="mButtonsPlain" parent="mButtons">
        <item name="android:theme">@style/Theme.MyApplication</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/style_btn_roundedcorners_clicked</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/servus_white</item>
    </style>

    <style name="mImageRadioButtons" parent="Theme.MyApplication">
        <item name="android:theme">@style/Theme.MyApplication</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="mBottomSheets" parent="Theme.MyApplication">
        <item name="buttonStyle">@style/mButtons</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:elevation">2dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@drawable/style_bottomsheet_background_dark</item>
        <item name="android:datePickerStyle">@style/mDatePickerStyle</item>
        <item name="android:datePickerDialogTheme">@style/mDatePickerStyle</item>
    </style>

    <style name="mBottomSheetsContents" parent="Theme.MyApplication">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="buttonStyle">@style/mButtons</item>
        <item name="android:datePickerStyle">@style/mDatePickerStyle</item>
        <item name="android:datePickerDialogTheme">@style/mDatePickerStyle</item>
    </style>

    <style name="mBottomSheetFragments" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/mBottomSheetFragmentStyle</item>
        <item name="buttonStyle">@style/mButtons</item>
        <item name="android:datePickerStyle">@style/mDatePickerStyle</item>
        <item name="android:datePickerDialogTheme">@style/mDatePickerStyle</item>
    </style>

    <style name="mBottomSheetFragmentStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="buttonStyle">@style/mButtons</item>
        <item name="android:datePickerStyle">@style/mDatePickerStyle</item>
        <item name="android:datePickerDialogTheme">@style/mDatePickerStyle</item>
    </style>

    <style name="mScrollViews" parent="Theme.MyApplication">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="roundedImageView" parent="Theme.MyApplication">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="mRoundedImageViews" parent="Theme.MyApplication">
        <item name="android:theme">@style/Theme.MyApplication</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:elevation">2dp</item>
        <item name="android:src">@drawable/img_placeholder_avatar</item>
        <item name="android:background">@drawable/style_imageview_roundedcorners</item>
        <item name="shapeAppearanceOverlay">@style/roundedImageView</item>
    </style>

    <style name="mLabelContainer" parent="Theme.MyApplication">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="mLabels" parent="Theme.MyApplication">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/servus_pink</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/dancingscript</item>
    </style>

    <style name="mLabelledTextViews" parent="Theme.MyApplication">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mTutorialLabels" parent="mLabels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="mProfileCardLabels" parent="mLabels">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="mProfileCardLabelledTextViews" parent="mLabelledTextViews">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mTutorialSublabels" parent="mTutorialLabels">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:translationY">1dp</item>
    </style>

    <style name="mEditTexts" parent="Widget.AppCompat.EditText">
        <item name="android:theme">@style/Theme.MyApplication</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/servus_white</item>
        <item name="android:gravity">top|left</item>
        <item name="android:background">@drawable/style_edittext</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="mSlideIndicator" parent="Theme.MyApplication">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="mDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:theme">@style/Theme.MyApplication</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:calendarTextColor">@color/servus_white</item>
        <item name="colorControlNormal">@color/servus_pink</item>
        <item name="android:colorControlNormal">@color/servus_pink</item>
    </style>

    <style name="mSpinnerItems" parent="Theme.MyApplication">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/servus_darkmode_grey</item>
    </style>

    <style name="mNumberPickerStyle" parent="@style/Theme.MyApplication">
        <item name="android:theme">@style/Theme.MyApplication</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="colorControlNormal">@color/servus_pink</item>
        <item name="android:colorControlNormal">@color/servus_pink</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>