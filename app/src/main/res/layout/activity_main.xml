<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="24dp" >

        <com.google.android.material.imageview.ShapeableImageView
            app:shapeAppearanceOverlay="@style/roundedImageView"
            android:id="@+id/btn_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:contentDescription="@string/descriptions_btn_settings"
            android:src="@drawable/img_placeholder_avatar"
            android:background="@drawable/style_roundedcorners" />

        <Button
            android:id="@+id/btn_meetup"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:text="@string/content_create_meetup"
            android:background="@drawable/style_roundedcorners" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_filter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/style_roundedcorners"
            android:contentDescription="@string/descriptions_btn_filter"
            android:src="@drawable/ic_filter"
            app:shapeAppearanceOverlay="@style/roundedImageView" />

    </LinearLayout>

    <include layout="@layout/bottomsheet_settings" />
    <include layout="@layout/bottomsheet_creator" />
    <include layout="@layout/bottomsheet_participant" />
    <include layout="@layout/bottomsheet_filter" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>