<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/servus_pink</item>
        <item name="colorPrimaryVariant">@color/servus_pink_variant</item>
        <item name="colorOnPrimary">@color/servus_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/servus_violet</item>
        <item name="colorSecondaryVariant">@color/servus_blue</item>
        <item name="colorOnSecondary">@color/servus_white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/servus_white</item>
        <item name="android:colorControlHighlight">@color/servus_pink</item>
        <item name="android:colorControlActivated">@color/servus_pink</item>
        <item name="android:colorControlNormal">@color/servus_blue</item>
        <item name="android:colorAccent">@color/servus_pink</item>

        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/servus_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mButtons" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/style_btn_roundedcorners</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/servus_white</item>
    </style>

    <style name="mButtonsPlain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/servus_white_transparent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/servus_black</item>
    </style>

    <style name="mBottomSheets">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_peekHeight">0dp</item>
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior</item>
        <item name="android:background">@drawable/style_bottomsheet_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:paddingTop">144dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="mBottomSheetsContents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mScrollViews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="mLabelContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="mLabels">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/servus_pink</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/dancingscript</item>
    </style>

    <style name="mLabelledTextViews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mTutorialLabels" parent="mLabels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="mTutorialSublabels" parent="mTutorialLabels">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:translationY">1dp</item>
    </style>

    <style name="mEditTexts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/servus_black</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="mSlideIndicator">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>